<div class="feedback-comment feedback-edit-comment feedback-edit-multiple">
  <a href="#" class="feedback-comment-close"><i class="fa fa-times" /></a>
  
  <h3>{{count}} selected comments</h3>
  
  <div class="feedback-tags">
    <div class="feedback-tag-list">
      {{#each tags}}
        <span class="feedback-tag" style="background: rgba(170, 170, 170, {{percent}})">
          {{name}}
          <a class="feedback-remove-tag"><i class="fa fa-close"></i></a>
        </span>
      {{/each}}
    </div>
    <input type="text" class="feedback-new-tag" placeholder="New Tag" />
  </div>

  <div class="feedback-text empty"></div>

  <div class="feedback-commands">
    {{#if permissions/destroy}}
    <button class="btn btn-delete btn-small btn-danger">Delete</button>
    {{/if}}
    <button class="btn btn-read btn-small btn-default {{#if read}}active{{/if}}" data-toggle="button">Read</button>
  </div>
</div>
