<div class="feedback-conversation feedback-edit-conversation" data-id="{{id}}">
  <div class="feedback-header">
    <a href="#" class="feedback-conversation-close"><i class="fa fa-times" /></a>
    {{#if canCopy}}
    <a href="#" class="feedback-conversation-copy-url" title="Copy URL"><i class="fa fa-link" /></a>
    <a href="#" class="feedback-conversation-copy" title="Copy Text"><i class="fa fa-copy" /></a>
    {{/if}}
    <span class="feedback-conversation-index">
      <b>{{index}}</b> of <b>{{total}}</b>
    </span>

    <div class="feedback-signal-strength-selector dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <span class="feedback-conversation-signal-strength">
          {{{signalStrengthImage signalStrength size=20}}}
        </span>
      </a>
      <ul class="dropdown-menu">
        <li><a href="#" data-value="1">{{{signalStrengthImage 1 size=20}}} 1</a></li>
        <li><a href="#" data-value="2">{{{signalStrengthImage 2 size=20}}} 2</a></li>
        <li><a href="#" data-value="3">{{{signalStrengthImage 3 size=20}}} 3</a></li>
        <li><a href="#" data-value="4">{{{signalStrengthImage 4 size=20}}} 4</a></li>
        <li role="separator" class="divider"></li>
        <li><a href="#" data-value="0">No value</a></li>
      </ul>
    </div>



    {{{avatar reporter/email 24 reporter/name}}}

    {{#if customer}}
      <a href="?q=customer:{{customer/slug}}" class="feedback-customer feedback-query">{{customer/name}}</a>
    {{else}}{{#if attributedTo}}
      <a class="feedback-customer unidentified feedback-customer-identify">{{attributedTo}}</a>
    {{else}}
      <span class="feedback-customer unknown">{{reporter/name}}</span>
    {{/if}}{{/if}}
    <span class="feedback-customer-edit"><input type="text" value="{{attributedTo}}" maxlength="255" /></span>

    <div class="feedback-metadata">
      <span class="feedback-reporter">{{coalesce reporter/name "Unknown"}}</span>
      <span class="feedback-created date">{{{formatDateWithYear2 createdAt}}}</span>
    </div>
  </div>

  <div class="feedback-tags">
    <hr/>
    <div id="feedback_tags" class="feedback-tag-list">
      {{{renderFeedbackTags tags}}}
    </div>
    <input type="text" class="feedback-new-tag mousetrap" placeholder="New Tag" />
  </div>

  <div class="feedback-body">
    <div class="feedback-text markdown">{{{markdown text}}}
      <div class="feedback-text-snippet-marker"></div>
    </div>
    <div class="feedback-text edit uploader">
      <textarea>{{text}}</textarea>
    </div>

    <div class="feedback-comments">
      <hr/>

      <h6>Comments</h6>

      {{#if permissions/addComment}}
      <div class="feedback-comment feedback-new-comment">
        <div class="feedback-comment-author">
          {{{userAvatar 24}}}
        </div>
        <div class="feedback-comment-body feedback-comment-text">
          <textarea class="feedback-comment-text-input" placeholder="Write a new comment" />
        </div>
      </div>
      {{/if}}

      <div id="comments">
        {{#each comments}}
          {{{renderComment this}}}
        {{/each}}
      </div>

    </div>
  </div>

  <div id="feedback_commands" class="feedback-commands">
    {{{renderFeedbackCommands this}}}
  </div>
</div>
